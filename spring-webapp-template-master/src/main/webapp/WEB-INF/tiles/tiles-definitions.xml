<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE tiles-definitions PUBLIC
   "-//Apache Software Foundation//DTD Tiles Configuration 2.1//EN"
   "http://tiles.apache.org/dtds/tiles-config_2_1.dtd">

<tiles-definitions>
    <definition title="layouts" template="/WEB-INF/views/layout/template.jsp">
        <put-attribute title="title" value="TEMPLATE APP" />
        <put-attribute title="header"
            value="/WEB-INF/views/layout/header.jsp" />
        <put-attribute title="footer"
                       value="/WEB-INF/views/layout/footer.jsp" />
        <put-attribute title="body" value="" />
    </definition>

    <definition title="*/*" extends="layouts">
        <put-attribute title="title" value="title.{1}.{2}" />
        <put-attribute title="body" value="/WEB-INF/views/{1}/{2}.jsp" />
    </definition>
</tiles-definitions>