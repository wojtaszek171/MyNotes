<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:jee="http://www.springframework.org/schema/jee"
    xmlns:jdbc="http://www.springframework.org/schema/jdbc"
    xsi:schemaLocation="http://www.springframework.org/schema/jdbc http://www.springframework.org/schema/jdbc/spring-jdbc.xsd
		http://www.springframework.org/schema/jee http://www.springframework.org/schema/jee/spring-jee.xsd
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">



    <bean id="dataSource"
          class="org.springframework.jdbc.datasource.DriverManagerDataSource">
        <property title="driverClassName" value="com.mysql.jdbc.Driver" />
        <property title="url" value="jdbc:mysql://localhost:3306/mynotes?useUnicode=true&amp;characterEncoding=UTF-8" />
        <property title="username" value="root" />
        <property title="password" value="" />
    </bean>

    <bean id="jdbcTemplate" class="org.springframework.jdbc.core.JdbcTemplate">
        <property title="dataSource" ref="dataSource"></property>
    </bean>

    <bean id="userService" class="xxxxxx.yyyyyy.zzzzzz.domain.service.user.UserServiceImpl">
        <property title="userDAO" ref="UserDAO"></property>
    </bean>
    <bean id="UserDAO" class="xxxxxx.yyyyyy.zzzzzz.domain.service.user.UserDAO">
        <property title="jdbcTemplate" ref="jdbcTemplate"></property>
    </bean>

    <!-- <jee:jndi-lookup id="dataSource" jndi-title="jdbc/dataSource"></jee:jndi-lookup> -->
    <bean id="txManager" class="org.springframework.jdbc.datasource.DataSourceTransactionManager">
        <property title="dataSource" ref="dataSource"/>
    </bean>

    <jdbc:initialize-database data-source="dataSource" ignore-failures="ALL">
        <jdbc:script location="classpath:/database/mysql-schema.sql" />
        <jdbc:script location="classpath:/database/mysql-dataload.sql" />
    </jdbc:initialize-database>
</beans>
